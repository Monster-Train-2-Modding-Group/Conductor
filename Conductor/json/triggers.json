{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "card_trigger_types": [
    {
      "id": "Junk",
      "names": {
        "english": "Junk",
        "chinese": "废弃"
      },
      "descriptions": {
        "english": "Triggers when a card (other than this one) is discarded during your turn.",
        "chinese": "回合结束前有其他卡牌被舍弃时触发。"
      }
    }
  ],
  "character_trigger_types": [
    {
      "id": "Accursed",
      "names": {
        "english": "Accursed",
        "chinese": "被咒"
      },
      "descriptions": {
        "english": "Triggers when, during your turn, a <b>Blight</b> or [junk] is played or discarded on the floor.",
        "chinese": "回合结束前在本层打出或舍弃[blight]牌或[junk]牌时触发。"
      },
      "sprite": "@trigger_accursed"
    },
    {
      "id": "Encounter",
      "names": {
        "english": "Encounter",
        "chinese": "遭遇"
      },
      "descriptions": {
        "english": "Triggers when this unit encounters another friendly unit.",
        "chinese": "遇到其他盟友时触发。"
      },
      "sprite": "@trigger_encounter"
    },
    {
      "id": "Evoke",
      "names": {
        "english": "Evoke",
        "chinese": "营造"
      },
      "descriptions": {
        "english": "Triggers when any unit's ability is activated on this floor.",
        "chinese": "该单位任意盟友的能力激活时触发。"
      },
      "sprite": "@trigger_evoke"
    },
    {
      "id": "FollowUp",
      "names": {
        "english": "Follow-up",
        "chinese": ""
      },
      "descriptions": {
        "english": "Triggers when an opposing unit is directly hit by an ally of this unit.",
        "chinese": ""
      },
      "sprite": "@trigger_followup"
    },
    {
      "id": "Junk",
      "names": {
        "english": "Junk",
        "chinese": "废弃"
      },
      "descriptions": {
        "english": "Triggers when, during your turn, a card is discarded on the floor.",
        "chinese": "回合结束前有卡牌被舍弃时触发。"
      },
      "sprite": "@trigger_junk"
    },
    {
      "id": "Mobilize",
      "names": {
        "english": "Mobilize",
        "chinese": "动员"
      },
      "descriptions": {
        "english": "Triggers when an allied unit is spawned on this floor.",
        "chinese": "在本层有单位被生成时触发。"
      },
      "sprite": "@trigger_mobilize"
    },
    {
      "id": "Penance",
      "names": {
        "english": "Penance",
        "chinese": "忏悔"
      },
      "descriptions": {
        "english": "Triggers when a <b>Blight</b> or [junk] is played on the floor.",
        "chinese": "在本层打出[blight]牌或[junk]牌时触发。"
      },
      "sprite": "@trigger_penance"
    },
    {
      "id": "Vengeance",
      "names": {
        "english": "Vengeance",
        "chinese": "复仇（盟友）"
      },
      "descriptions": {
        "english": "Triggers when an allied unit is hit by an opposing unit or spell.",
        "chinese": "本层友方单位被敌方单位命中时触发。"
      },
      "sprite": "@trigger_vengeance"
    }
  ],
