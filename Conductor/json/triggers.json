{
  "$schema": "https://github.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/releases/latest/download/schema.json",
  "card_trigger_types": [
    {
      "id": "Junk",
      "names": {
        "english": "Junk",
        "chinese": "废弃"
      },
      "descriptions": {
        "english": "Triggers when a card (other than this one) is discarded during your turn.",
        "chinese": "回合结束前有其他卡牌被舍弃时触发。"
      }
    }
  ],
  "character_trigger_types": [
    {
      "id": "Accursed",
      "names": {
        "english": "Accursed",
        "chinese": "被咒"
      },
      "descriptions": {
        "english": "Triggers when, during your turn, a <b>Blight</b> or [junk] is played or discarded on the floor.",
        "chinese": "回合结束前在本层打出或舍弃[blight]牌或[junk]牌时触发。"
      },
      "sprite": "@trigger_accursed"
    },
    {
      "id": "AfterSpawnBetterEnchant",
      "names": {
        "english": "Enchant",
        "french": "Enchantement",
        "german": "Begeisterung",
        "russian": "Усиление",
        "portuguese": "Encantamento",
        "chinese": "附魔",
        "spanish": "Encantamiento",
        "chinese_traditional": "附魔",
        "korean": "마법 부여",
        "japanese": "エンチャント"
      },
      "descriptions": {
        "english": "Specified units gain a bonus.",
        "french": "Les unités spécifiées obtiennent un bonus.",
        "german": "Bestimmte Einheiten erhalten einen Bonus.",
        "russian": "Указанные подразделения получают бонус.",
        "portuguese": "Unidades especificadas recebem um bônus.",
        "chinese": "指定单位将获得奖金。",
        "spanish": "Las unidades especificadas obtienen una bonificación.",
        "chinese_traditional": "指定單位獲得加成。",
        "korean": "지정된 유닛은 보너스를 얻습니다.",
        "japanese": "指定されたユニットにボーナスが付与されます。"
      },
      "sprite": "@trigger_enchant",
      "is_state_modifier": true
    },
    {
      "id": "Encounter",
      "names": {
        "english": "Encounter",
        "chinese": "遭遇"
      },
      "descriptions": {
        "english": "Triggers when this unit encounters another friendly unit.",
        "chinese": "遇到其他友方单位时触发。"
      },
      "sprite": "@trigger_encounter"
    },
    {
      "id": "Evoke",
      "names": {
        "english": "Evoke",
        "chinese": "营造"
      },
      "descriptions": {
        "english": "Triggers when any unit's ability is activated on this floor.",
        "chinese": "本层任意单位的能力激活时触发。"
      },
      "sprite": "@trigger_evoke"
    },
    {
      "id": "FollowUp",
      "names": {
        "english": "Follow-up",
        "chinese": "连携"
      },
      "descriptions": {
        "english": "Triggers when an opposing unit is directly hit by an ally of this unit.",
        "chinese": "本层对方单位被盟友单位直接命中时触发。"
      },
      "sprite": "@trigger_followup"
    },
    {
      "id": "Junk",
      "names": {
        "english": "Junk",
        "chinese": "废弃"
      },
      "descriptions": {
        "english": "Triggers when, during your turn, a card is discarded on the floor.",
        "chinese": "回合结束前有卡牌被舍弃时触发。"
      },
      "sprite": "@trigger_junk"
    },
    {
      "id": "Mobilize",
      "names": {
        "english": "Mobilize",
        "chinese": "动员"
      },
      "descriptions": {
        "english": "Triggers when an allied unit is spawned on this floor.",
        "chinese": "在本层有盟友单位被生成时触发。"
      },
      "sprite": "@trigger_mobilize"
    },
    {
      "id": "Penance",
      "names": {
        "english": "Penance",
        "chinese": "忏悔"
      },
      "descriptions": {
        "english": "Triggers when a <b>Blight</b> or [junk] is played on the floor.",
        "chinese": "在本层打出[blight]牌或[junk]牌时触发。"
      },
      "sprite": "@trigger_penance"
    },
    {
      "id": "Resonance",
      "names": {
        "english": "Resonance",
        "chinese": "共鸣"
      },
      "descriptions": {
        "english": "Triggers when the pyre is hit.",
        "chinese": "薪火受到伤害时触发。"
      },
      "sprite": "@trigger_resonance"
    },
    {
      "id": "Vengeance",
      "names": {
        "english": "Vengeance",
        "chinese": "复仇（盟友）"
      },
      "descriptions": {
        "english": "Triggers when an allied unit is hit by an opposing unit or spell.",
        "chinese": "本层盟友单位被对方单位或法术命中时触发。"
      },
      "sprite": "@trigger_vengeance"
    }
  ],
